<?xml version="1.0" encoding="UTF-8"?>    
    <RelativeLayout 
				    xmlns:android="http://schemas.android.com/apk/res/android"
				    android:layout_width="match_parent"
    				android:layout_height="match_parent"  		
    				android:layout_alignParentBottom="true">
    	<TextView android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:text="已备份文件"
    				android:paddingLeft="3dp"
    				android:layout_alignParentTop="true"
    				android:background="@android:color/darker_gray"
    				android:id="@+id/backup_restore_listView_label"></TextView>
    	
    	<LinearLayout android:layout_width="match_parent"
    					android:layout_height="wrap_content"
    					android:orientation="horizontal"
    					android:layout_alignParentBottom="true"
    					android:visibility="gone"
    					android:id="@+id/backup_restore_button_bar"
						>
    		
    		<Button android:layout_width="0dp"
    				android:layout_height="wrap_content"
    				android:layout_weight="1.0"
    				android:text="全选">
    		</Button>
    		<Button android:layout_width="0dp"
    				android:layout_height="wrap_content"
    				android:layout_weight="1.0"
    				android:text="删除">
    		</Button>
    	</LinearLayout>
    	
    	<ListView android:layout_below="@id/backup_restore_listView_label"
    				android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:layout_above="@id/backup_restore_button_bar"   				
    				android:id="@+id/backup_restore_listView">
    	</ListView>
    </RelativeLayout>   
