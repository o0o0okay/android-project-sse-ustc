<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  >
  
  <TextView android:id="@+id/event_list_item_date"
  			android:layout_width="match_parent"
  			android:layout_height="wrap_content"
  			android:layout_alignParentTop="true"
  			android:background="@android:color/darker_gray"
  			android:text="Date from x to x">
  </TextView>

  <RelativeLayout android:layout_width="fill_parent"
  				android:layout_height="wrap_content"			
  				android:layout_below="@id/event_list_item_date"
  			    android:background="@android:drawable/list_selector_background"
  			    >
  			    
  	
  	  <ImageView android:id="@+id/event_list_item_check"
	  			android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:layout_gravity="right"
	  			android:layout_alignParentRight="true"
	  			android:layout_centerVertical="true"
	  			android:src="@drawable/indicator_check_mark_light"
	  			>
	  </ImageView>	    
  
  	<LinearLayout android:layout_width="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_toLeftOf="@id/event_list_item_check"
  					android:layout_height="wrap_content"
  					android:orientation="vertical"
  					>
		  <TextView android:id="@+id/event_list_item_content"
		  			android:layout_height="wrap_content"
		  			android:layout_width="wrap_content"			
		  			android:text="Content">
		  </TextView>
		  
		  <TextView android:id="@+id/event_list_item_location"
		  			android:layout_width="wrap_content"
		  			android:layout_height="wrap_content"
		  			android:layout_alignParentLeft="true"
		  			android:text="location">
		  </TextView>
		  
	  </LinearLayout>
	
	  
  </RelativeLayout>
  
  
</RelativeLayout>
