<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <TextView android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:id="@+id/backup_restore_item_backup_time"
  			android:layout_alignParentTop="true"
  			android:layout_alignParentLeft="true"
  			android:layout_marginLeft="5dp"
  			android:text="备份时间">
  </TextView>
  <TextView android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_alignLeft="@id/backup_restore_item_backup_time"
  			android:layout_below="@id/backup_restore_item_backup_time"
  			android:id="@+id/backup_restore_item_backup_size"
  			android:text="备份大小">
  </TextView>
  <ImageView android:layout_width="wrap_content"
  			 android:layout_height="wrap_content"
  			 android:layout_alignParentRight="true"
  			 android:layout_centerVertical="true"
  			 android:id="@+id/backup_restore_item_check"
  			 android:src="@drawable/indicator_check_mark_light"
  			 android:visibility="visible">
  </ImageView>
</RelativeLayout>
