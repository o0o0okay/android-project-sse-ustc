<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  
  <ListView android:id="@+id/event_list_listView"
  			android:layout_height="0dp"
			android:layout_weight="1.0"
  			android:layout_width="match_parent">
  </ListView>
  
  <LinearLayout android:id="@+id/event_list_button_bar"
  				android:layout_width="match_parent"
  				android:layout_height="wrap_content"
  				android:orientation="horizontal"
  				android:gravity="center">
  	<Button android:id="@+id/event_list_select_button"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text="@string/event_list_select_button"
  			android:layout_weight="1.0"
  			android:gravity="center">
  	</Button>
  	<Button android:id="@+id/event_list_delete_button"
  			android:layout_width="0dp"
  			android:layout_height="wrap_content"
  			android:text="@string/event_list_delete_button"
  			android:layout_weight="1.0"
  			android:gravity="center"
  			android:layout_gravity="bottom">
  	</Button>
  	
  </LinearLayout>
</LinearLayout>
